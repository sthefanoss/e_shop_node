<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title ${view.title}
        link(rel="stylesheet", href="/css/main.css")
        block styles
    body
        header.main-header
            nav.main-header__nav
                ul.main-header__item-list
                    li.main-header__item
                        a(href="/" class = (view.route === "/" ? 'active' : '')) Shop
                    li.main-header__item
                        a(href="/admin/add-product" class = (view.route === "/admin/add-product" ? 'active' : '')) Add Product
        main
            block content